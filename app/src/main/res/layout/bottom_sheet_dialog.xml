<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="64dp"
        android:layout_height="2dp"
        android:layout_marginTop="18dp"
        android:background="@color/red"
        android:layout_gravity="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tv_honda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Honda"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/tv_honda"
            app:layout_constraintStart_toStartOf="@+id/tv_honda"
            app:layout_constraintEnd_toEndOf="@+id/tv_honda"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_suzuki"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Suzuki"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/tv_suzuki"
            app:layout_constraintStart_toStartOf="@+id/tv_suzuki"
            app:layout_constraintEnd_toEndOf="@+id/tv_suzuki"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_mazda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mazda"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/tv_mazda"
            app:layout_constraintStart_toStartOf="@+id/tv_mazda"
            app:layout_constraintEnd_toEndOf="@+id/tv_mazda"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_toyota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Toyota"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/tv_toyota"
            app:layout_constraintStart_toStartOf="@+id/tv_toyota"
            app:layout_constraintEnd_toEndOf="@+id/tv_toyota"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_daihatsu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Daihatsu"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@+id/tv_daihatsu"
            app:layout_constraintStart_toStartOf="@+id/tv_daihatsu"
            app:layout_constraintEnd_toEndOf="@+id/tv_daihatsu"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>